<%- include("partials/header") %>

<h1>Edit Grocery List</h1>

<% if (items.length > 0) { %>
  <form action="/grocery/remove" method="POST">
    <ul class="list-group mb-3">
      <% items.forEach(item => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= item %></span>
          <input type="checkbox" name="removeItems" value="<%= item %>">
        </li>
      <% }) %>
    </ul>
    <button type="submit" class="btn btn-danger">Remove Selected</button>
  </form>
<% } else { %>
  <p class="text-muted">Your grocery list is empty.</p>
<% } %>

<a href="/grocery" class="btn btn-outline-secondary mt-3">‚Üê Back to Grocery List</a>

